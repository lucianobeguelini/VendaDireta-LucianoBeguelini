@model IEnumerable<VendaDireta.Models.Produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PRODUTOS</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <span class="glyphicon glyphicon-file" aria-hidden="true"></span> Cadastrar
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendido)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
        <td style="text-align:center;width:80px;">
            @Html.DisplayFor(modelItem => item.Vendido)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.ProdutoId })" class="btn btn-primary">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Alterar
            </a>
            <a href="@Url.Action("Details", new { id = item.ProdutoId })" class="btn btn-success">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes
            </a>
            <a href="@Url.Action("Delete", new { id = item.ProdutoId })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
            </a>
        </td>
    </tr>
}

</table>
