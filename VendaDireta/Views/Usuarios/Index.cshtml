@model IEnumerable<VendaDireta.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>USUÁRIOS</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Receita)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Receita)
        </td>
        <td>
            <a href="@Url.Action("Details", new { id=item.UsuarioId })" class="btn btn-success">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Detalhes
            </a>
        </td>
    </tr>
}

</table>
